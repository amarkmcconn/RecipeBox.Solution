@model RecipeBox.Models.Recipe

<div class="container">
<h4>Add a new Recipe</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })<br>

    <br>@Html.LabelFor(model => model.Ingredients)
    @Html.TextAreaFor(model => model.Ingredients, new { required = "required", @class = "form-control"  })<br>

    <br>@Html.LabelFor(model => model.Instructions)
    @Html.TextAreaFor(model => model.Instructions, new { required = "required", @class = "form-control" })<br>

    <br>@Html.Label("Select Tag")
    @Html.DropDownList("TagId")<br>

    <br><input type="submit" value="Add new Recipe" class="btn btn-default" />
}
<br>
<p>@Html.ActionLink("Show all Recipes", "Index")</p>
</div>