@model RecipeBox.Models.Tag

<div class="container">
<h3>Add a new Tag</h3>
<img id="centeredImage" src='~/img/tag.jpg'><br>
<div id="table">
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  <input type="submit" value="Add new Tag" />
}
</div>
<p>@Html.ActionLink("Show all tags", "Index", null, null, new {@class = "myCssClass"})</p>
</div>