@using RecipeBox.Models;

<div class="container">
  <img id="centeredImage" src=img/openbox.jpg>
  <h1>Tags</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Tags have been added yet!</h3>
  } 

  <ul>
    @foreach(Tag tag in Model)
    {
      <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId })</li>
    }
  </ul>
  <table id="table">
    <tr>
      <td>@Html.ActionLink("Add new tag", "Create", null, null,  new {@class = "myCssClass"})</td>
      <td>@Html.ActionLink("Home", "Index", "Home", null,  new {@class = "myCssClass"})</td>
    </tr>
  </table>
</div>