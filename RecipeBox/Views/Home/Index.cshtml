@using System.Security.Claims

<div class="container">
  <h1><a href="https://fontmeme.com/the-planet-crafter-font/"><img id="centeredImage" src="https://fontmeme.com/permalink/220601/6641ca1a50b108a30c77cf1a4d95a638.png" alt="the-planet-crafter-font" border="0"></a></h1>
  <img id="centeredImage" src=img/closedbox.jpg>
  
  @if (User.Identity.IsAuthenticated)
  {
    <table id="table">
      <tr>
        <td>@Html.ActionLink("See all Recipes", "Index", "Recipes", null, new {@class = "myCssClass"})</td> 
        <td>@Html.ActionLink("See all Tags", "Index", "Tags", null, new {@class = "myCssClass"})</td>
        <td>@Html.ActionLink("Account Info", "Index", "Account", null, new {@class = "myCssClass"})</td>
      </tr>
    </table>
  }
  else
  {
    <table id="table">
      <tr>
        <td>@Html.ActionLink("Create an account", "Index", "Account", null, new {@class = "myCssClass"})</td>
      </tr>
    </table> 
  }  
</div>
